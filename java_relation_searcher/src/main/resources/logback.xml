<configuration>

	<!-- logをファイルに出力 -->
	<appender name="FILE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>/usr/local/app/logs/java_relation_searcher.log</File>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
<!--
		<FileNamePattern>/usr/local/app/logs/java_relation_searcher.%d{yyyy-MM-dd}.log</FileNamePattern>
 -->
	 		<FileNamePattern>C:\Users\Yucci\temp\java_relation_searcher.%d{yyyy-MM-dd}.log</FileNamePattern>
			<MaxHistory>7</MaxHistory>
		</rollingPolicy>
		<encoder>
			<charset>UTF-8</charset>
			<Pattern>[%-5level][%d{yyyy-MM-dd HH:mm:ss.SSS}] %class - %msg%n</Pattern>
		</encoder>
	</appender>

	<!-- logを標準出力に出力 -->
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<Target>System.out</Target>
		<encoder>
			<Pattern>[%-5level] %class - %msg%n</Pattern>
		</encoder>
	</appender>

	<!-- ログ出力に関する設定 -->
	<root>
		<level value="info" />
		<appender-ref ref="FILE" />
		<appender-ref ref="STDOUT" />
	</root>

</configuration>